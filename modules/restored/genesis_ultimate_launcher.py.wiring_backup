                        ma_fig.update_layout(title="Moving Averages", height=300)
                        st.plotly_chart(ma_fig, use_container_width=True)
                    
                    with col2:
                        # RSI
                        delta = df['close'].diff()
                        gain = (delta.where(delta > 0, 0)).rolling(window=14).mean()
                        loss = (-delta.where(delta < 0, 0)).rolling(window=14).mean()
                        rs = gain / loss
                        df['RSI'] = 100 - (100 / (1 + rs))
                        
