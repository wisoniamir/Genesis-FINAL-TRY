import sys
import os
from pathlib import Path

# Add current directory to Python path
current_dir = Path(__file__).parent
sys.path.insert(0, str(current_dir))

def launch_genesis():
    """Launch GENESIS advanced trading terminal"""
    try:
        from genesis_advanced_tkinter_ui import launch_genesis_terminal

from hardened_event_bus import EventBus, Event
        print("üöÄ Launching GENESIS Trading Terminal...")
        launch_genesis_terminal()
    except ImportError as e:
        print(f"‚ùå Failed to import GENESIS modules: {e}")
        print("Please ensure all required modules are installed.")
    except Exception as e:
        print(f"‚ùå Launch error: {e}")

if __name__ == "__main__":
    launch_genesis()


