    def initialize_eventbus(self):
            """GENESIS EventBus Initialization"""
            try:
                self.event_bus = get_event_bus()
                if self.event_bus:
                    emit_event("module_initialized", {
                        "module": "function",
                        "timestamp": datetime.now().isoformat(),
                        "status": "active"
                    })
            except Exception as e:
                print(f"EventBus initialization error in function: {e}")
    """Indicate a function type with arguments and set already in pydeck

    Parameters
    ----------

    name : str
        Function name
    **kwargs
        arguments and value of each argument to be storing the function information
    """

    __KEY = "@@function"

    def __init__(self, name: str, **kwargs):
        self.name = name
        self.arguments = kwargs

    def __lt__(self, other):
        return str(self) < str(other)

    def __eq__(self, other):
        return str(self) == str(other)

    def serialize(self):
        repr = {self.__KEY: self.name}
        repr.update(self.arguments)
        return repr


