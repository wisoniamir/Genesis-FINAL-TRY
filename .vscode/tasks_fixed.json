{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start GENESIS Dashboard",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
			"args": [
				"-m",
				"streamlit",
				"run",
				"dashboard.py"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Run StrategyRecommenderEngine",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
			"args": [
				"strategy_recommender_engine.py"
			],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Test Smart Monitor",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
			"args": [
				"test_smart_monitor.py"
			],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Validate STEP 7 Smart Monitor",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
			"args": [
				"validate_step7_smart_monitor.py"
			],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Start GENESIS Guardian v5.0",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
			"args": [
				"guardian.py"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"runOptions": {
				"runOn": "folderOpen"
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Force Guardian v5.0 Scan",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
			"args": [
				"-c",
				"from guardian import enforce_guardian_continuity; enforce_guardian_continuity()"
			],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Start Guardian Autoboot Lifecycle",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
			"args": [
				"guardian_autoboot_lifecycle.py"
			],
			"group": "build",
			"isBackground": true,
			"runOptions": {
				"runOn": "folderOpen"
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Start Guardian Continuous Service (Always Active)",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
			"args": [
				"guardian_continuous_service.py"
			],
			"group": "build",
			"isBackground": true,
			"runOptions": {
				"runOn": "folderOpen"
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Start Guardian Phase Hook Linker",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
			"args": [
				"guardian_phase_hook_linker.py"
			],
			"group": "build",
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Start Guardian Phase Hook Linker (Continuous)",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
			"args": [
				"guardian_phase_hook_linker.py",
				"--continuous"
			],
			"group": "build",
			"isBackground": true,
			"runOptions": {
				"runOn": "folderOpen"
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Stop Guardian Service",
			"type": "shell",
			"command": "taskkill",
			"args": [
				"/F",
				"/IM",
				"python.exe",
				"/T"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Run Guardian Phase Hook Linker",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
			"args": [
				"guardian_phase_hook_linker.py"
			],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}
